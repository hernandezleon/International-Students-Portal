<h5><%= comment.content %></h5>
<p>Posted by <%= comment.user.email %> <%= time_ago_in_words(comment.created_at) %> ago</p>

<% if user_signed_in? %>
	<% if comment.user_id == current_user.id %>	
		<div class="row">
		<div class="col-sm-2 form-group">

			<%= link_to "Edit", edit_message_comment_path(comment.message, comment), class: "btn btn-warning", :style => 'color:#FFFFFF;' %>
		</div>
	
			<%= link_to "Delete", message_comment_path(comment.message, comment), method: :delete, data: {confirm: "Are you sure?"},class: "btn btn-danger", :style => 'color:#FFFFFF;' %>
		</div>
	<% end %>
<% end %>
