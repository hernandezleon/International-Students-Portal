<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="jumbotron">
  <div class="container-fluid" >
    <div class="row right-form" >
      <!-- LEFT TEXT -->
      <div class="col-sm-7 col-md-6 col-lg-5">     
        <center>
          <h1>International Students Portal</h1>
          <p><b>Helping International Students Connect. </b></p><br />
        </center>
      </div>
      <!-- RIGHT FORM -->
      <center>
      <div class="col-sm-7 col-md-6 col-lg-5" style="float:right;">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">
              Sign up for International Students Portal Today!
            </h3>
          </div>
          <div class="panel-body">
            <form role="form">
              <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-6">
                  <div class="form-group">
                    <input type="text" name="first_name" id="first_name" class="form-control input-sm" placeholder="First Name">
                  </div>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6">
                  <div class="form-group">
                    <input type="text" name="last_name" id="last_name" class="form-control input-sm" placeholder="Last Name">
                  </div>
                </div>
              </div>
              <div class="form-group">
                <input type="email" name="email" id="email" class="form-control input-sm" placeholder="Email Address">
              </div>
              <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-6">
                  <div class="form-group">
                    <input type="password" name="password" id="password" class="form-control input-sm" placeholder="Password">
                  </div>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6">
                  <div class="form-group">
                    <input type="password" name="password_confirmation" id="password_confirmation" class="form-control input-sm" placeholder="Confirm Password">
                  </div>
                </div>
              </div>	    			
              <input type="submit" value="Register" class="btn btn-info btn-block">		 
              </center>
            </form>
          </div>
        </div>
      </div>
    </div>
</div>
</div>	    
