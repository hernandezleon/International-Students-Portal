<center><h2>Sign up</h2>
<h5>Your account will have to be confirmed by a website administrator after you finish this form.</h5>
</center>

<%= simple_form_for User.new, :url => new_admin_path do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="row">
    <div class="col-md-6 col-md-offset-3"> 
    <br>

        <!-- one -->
      <div class="row">
        <div class="col-sm-6 form-group">
          <%= f.input :name, autofocus: true  %><br />
        </div>
 
        <div class="col-sm-6 form-group">  
          <%= f.input :last_name, autofocus: true %><br />
        </div>
      </div>

          <%= f.input :school, autofocus: true, require: true %>
            <div>What school are you associated with? <br /></div>

      <div class="row">
        <div class="col-sm-6 form-group">
          <center>
            <%= f.label :gender %><br />
              <%= f.select :gender, %w{Male Female}, :prompt => 'Select', required: true, placeholder: 'Gender', class: 'form-control' %>
          </center>
        </div>


      <div class="col-sm-6 form-group">
        <center>
          <%= f.label :date_of_birth %><br />
          <%= f.date_select :date_of_birth, :start_year => 1980 %>
        </center>
      </div>
      </div>

        <%= f.input :email, required: true, autofocus: true %>
        <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
        <%= f.input :password_confirmation, required: true %>
  
    <center>
      <div class="form-actions">
        <%= f.button :submit, "Sign up" ,:style => 'color:#FFFFFF;',class: "btn btn-lg btn-info btn-block"%>
      </div>
    </center>
</div>
</div>

<% end %>
<center>
<%= render "devise/shared/links" %>
</center>