<h2><%= @message.title %></h2>
<p>Posted by <%= @message.user.email %> <%= time_ago_in_words(@message.created_at) %> ago</p>
<h4><%= @message.description %></h4>
<br />
<h3> Comments: </h3>
<br />
<%= render @message.comments %>

<% if user_signed_in? %>	
	<h3> Reply to Message </h3>
	<%= render 'comments/form' %>
<% end %>

<%= button_to "Back", messages_path,:method => :get,class: "btn btn-primary" %> <br>
<% if user_signed_in? %>
	<% if @message.user_id == current_user.id %>
		<%= button_to "Edit", edit_message_path(@message),method: :get,class: "btn btn-warning" %> <br>
		<%= button_to "Delete", message_path(@message), method: :delete, data: {confirm: "Are You Sure"},class: "btn btn-danger" %>
		<!--%= button_to "Delete", messages_path(@message), :method=>:delete, :class=>:destroy, data: {confirm: "are you sure"} %-->
	<% end %>
<% end %>