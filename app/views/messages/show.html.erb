<br>
<div class="row">
  <div class="col-md-8 col-md-offset-2">

		<!-- MESSAGE -->
		<h2><%= @message.title %></h2>

		<h4><%= @message.description %></h4>

		<p>Posted by <%= @message.user.email %> <%= time_ago_in_words(@message.created_at) %> ago</p>
		
		<!-- EDIT OR DELETE MAIN COMMENT -->
		<div class="row">
		<div class="col-sm-2 form-group">
		<%= button_to "Edit", edit_message_path(@message), method: :get,class: "btn btn-warning" %> 
		</div>

		<%= button_to "Delete", message_path(@message), method: :delete, data: {confirm: "Are You Sure"},class: "btn btn-danger" %> 
		</div>

		<h3> Comments: </h3>

		<%= render @message.comments %>

		<% if user_signed_in? %>	
			<h3> Reply to Message </h3>
			<%= render 'comments/form' %>
		<% end %>		
	</div>
		<div class="row">
	 	 <div class="col-md-8 col-md-offset-2">
			<br>
			<%= button_to "Back", messages_path,:method => :get,class: "btn btn-info" %> 
			<% if user_signed_in? %>
			<% if @message.user_id == current_user.id %>

	</div>
</div>


	<% end %>
<% end %>
