<p id="notice"><%= notice %></p>

<center><h1>Your Checklists</h1></center>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @checklists.each do |checklist| %>
      <tr>
        <h2><%= link_to checklist.school_name, checklist_path(checklist) %></h2>
        <%= link_to 'Edit', edit_checklist_path(checklist) %> <br >
        <%= link_to 'Destroy', checklist, method: :delete, data: { confirm: 'Are you sure?' } %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Checklist', new_checklist_path %>
